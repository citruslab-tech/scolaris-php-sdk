{
  "name": "citruslab-tech/scolaris-php-sdk",
  "description": "SDK for interacting with Scolaris API",
  "version": "v1.0.0",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "ScolarisSdk\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-detail": "phpunit --coverage-text",
    "test-coverage": [
      "phpunit --coverage-clover=coverage/clover.xml",
      "php validate-coverage.php 13"
    ]
  },
  "require": {
    "php": "^8.0",
    "guzzlehttp/guzzle": "^7.9"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.3",
    "phpunit/php-code-coverage": "^11.0"
  }
}
